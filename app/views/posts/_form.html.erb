<%= form_with model: post, local: true do |f| %>
      <div class="post-form__content">
        <div class="post-form__box">
          <div class="post-form__h-title">タイトル</div>
          <div class="post-form__l-title">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="post-form__box">
          <div class="post-form__h-image">画像</div>
          <div class="post-form__l-image">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="post-form__box">
          <div class="post-form__h-body">投稿内容</div>
          <div class="post-form__l-body">
            <%= f.text_area :body %>
          </div>
        </div>
      </div>
      <div class="move-page">
        <%= f.submit '投稿する', class:"move-page__btn" %>
      </div>
    <% end %>