<div class="yield-layout">
    <%= render 'users/info', user: @user %>

    <div class="post-show">
      <h2 class="post-show__title">投稿の詳細</h2>
      <div class="post-show__content">
        <div class="post-show__box">
          <div class="post-show__h-date">日付</div>
          <div class="post-show__l-date">
            <%= @variablecost_value.start_time.strftime('%Y/%m/%d') %>
          </div>
        </div>
        <div class="post-show__box">
          <div class="post-show__h-name">項目</div>
          <div class="post-show__l-name">
            <%= @variablecost_value.variablecost.name %>
          </div>
        </div>
        <div class="post-show__box">
          <div class="post-show__h-content">内容</div>
          <div class="post-show__l-content">
            <%= @variablecost_value.content %>
          </div>
        </div>
        <div class="post-show__box">
          <div class="post-show__h-value">金額</div>
          <div class="post-show__l-value">
            <%= @variablecost_value.value %>
          </div>
        </div>
        <div class="post-show__box">
          <div class="post-show__h-description">備考</div>
          <div class="post-show__l-description">
            <%= @variablecost_value.description %>
          </div>
        </div>

        <div class="post-show__box" id="favorite_buttons_<%=@variablecost_value.id %>">
          <%= render 'favorites/favorite', post: @variablecost_value %>
        </div>
        <div class="post-show__box" id="comments_count">
          <%= render 'comments/count', post: @variablecost_value %>
        </div>
        <div class="post-show__box" id="comments_form">
          <%= render 'comments/form', post: @variablecost_value, comment: @comment %>
        </div>
        <div class="post-show__box" id="comments_area">
          <%= render 'comments/comments', post: @variablecost_value %>
        </div>
        <% if @variablecost_value.user_id == current_user.id %>
          <div class="move-page">
            <%= link_to '編集する', edit_variablecost_value_path(@variablecost_value)%>
          </div>
          <div class="move-page">
            <%= link_to '削除する', variablecost_value_path(@variablecost_value), method: :delete, data: { confirm: '本当に消しますか？' }%>
          </div>
        <% end %>
      </div>

    </div>
</div>