<% unless posts.present? %>
  <p>投稿がありません</p>
<% else %>
  <% posts.each do |post| %>
    <%= link_to user_path(post.user) do %>
      <%= attachment_image_tag(post.user, :profile_image, fallback: "user_no_image.jpg", size: '40x40', class:'user-index__image') %>
      <% post.user.name %>
    <% end %>
    <%= link_to post.title, post_path(post) %>
    <% unless post.image.present? %>
    <% else %>
      <%= attachment_image_tag(post, :image, size: '40x40') %>
      <%= post.body %>
    <% end %>
  <% end %>
<% end %>