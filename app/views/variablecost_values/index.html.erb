<%= month_calendar events: @variablecost_values do |date, variablecost_value| %>
  <%= date.day %>
  <% variablecost_value.each do |item| %>
    <%=link_to item.value, {controller: "records", action: "variablecost_day", order: item.start_time}, method: :post %>
  <% end %>
<% end %>