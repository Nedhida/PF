<div class="records-month">
  <h2 class="records-month__title">支出カレンダー</h2>

  <%= render 'kakeibo-p/links' %>

  <%= month_calendar events: @variablecost_values do |date, variablecost_value| %>
    <div class="records-month__box">
      <%=date.day %>
      <% sum_values = 0 %>
      <% variablecost_value.each do |item| %>
        <% sum_values += item.value %>
      <% end %>
      <% unless sum_values == 0 %>
        <%=link_to sum_values, {controller: "records", action: "variablecost_day", start_time: date}, class:"records-month__total" %>
      <% end %>
    </div>

  <% end %>
</div>