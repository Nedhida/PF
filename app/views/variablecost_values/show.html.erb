<div class="yield-layout">

  <div class="values-show">
    <h2 class="values-show__title">支出データ詳細</h2>

    <%= render 'kakeibo-p/links' %>
    <div class="values-show__content">
      <div class="values-show__list">
        <div class="values-show__box">
          <div class="values-show__head">日付</div>
          <div class="values-show__obj">
            <%= @variablecost_value.start_time.strftime('%Y/%m/%d')%>
          </div>
        </div>
        <%= render 'variablecost_values/show', item: @variablecost_value %>
      </div>
      <div class="move-page">
        <%= link_to '編集する', edit_variablecost_value_path(@variablecost_value), class:"move-page__edit" %>
        <%= link_to '削除する', variablecost_value_path(@variablecost_value), method: :delete, data: { confirm: '本当に消しますか？' }, class:"move-page__delete" %>
      </div>
    </div>
    <div class="move-page">
      <%=link_to '今日の登録', day_records_path(start_time: @variablecost_value.start_time.strftime('%Y/%m/%d')) %>
    </div>

  </div>
</div>