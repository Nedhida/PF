<% if user_signed_in? %>
  <%=form_with url: search_path, method: :get, local: true do |f| %>
    <div class="search-form">
      <div class="search-form__box">
        <%= f.text_field :content, value: @content, :placeholder => "SNS内を検索" %>
      </div>
      <div class="search-form__box">
        <div class="search-form__item">
          <!-- ↓一旦削除, "項目" => "variablecost"-->
          <%= select_tag 'model', options_for_select({"ユーザー" => "user", "投稿" => "variablecost_value"}) %>
        </div>
        <div class="search-form__item">
          <%= select_tag 'method', options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
        </div>
        <div class="move-page">
          <%= f.submit '検索' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
