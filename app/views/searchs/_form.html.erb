<div class="search-form">
  <% if user_signed_in? %>
    <%=form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content, value: @content %>
      <%= select_tag 'model', options_for_select({"ユーザー" => "user", "投稿" => "variablecost_value", "項目" => "variablecost"}) %>
      <%= select_tag 'method', options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%= f.submit '検索' %>
    <% end %>
  <% end %>
</div>