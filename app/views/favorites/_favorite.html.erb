<% unless post.user_id == current_user.id %>

  <% if post.favorited_by?(current_user) %>
    <!-- remote: true でJavaScriptのリクエストがfavoritesコントローラに送られる　-->
    <%= link_to variablecost_value_favorites_path(post), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to variablecost_value_favorites_path(post), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>

<% end %>
