<div class="records-in-day">

  <div class="records-in-day__title">1日の収入一覧</div>
  <div class="">
    <div class="">
      <%= link_to '収入データ登録', new_income_value_path %>
    </div>
  </div>
  
  <%= render 'income_values/day_select' %>
  
  <div class="records-in-day__box">
      <div class="records-in-day__head">日付</div>
      <div class="records-in-day__start-time">
        <%= @start_time %>
      </div>
    </div>
  <% if @income_values.present? %>
    <% @income_values.each do |item| %>
    
      <%= render 'income_values/index', item: item %>
  
   <% end %>
    <div class="records-in-day__box">
      <div class="records-in-day__head">金額</div>
      <div class="records-in-day__value">
        <%= @income_value_total %> 円
      </div>
    </div>
  <% else %>
    <div class="item-nothing">登録がありません</div>
  <% end %> 

</div>