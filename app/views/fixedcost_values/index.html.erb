
日付選択
<%= link_to '固定費データ登録', new_fixedcost_value_path %>


<% @fixedcost_values.each do |item| %>
  <%= render 'index', item: item %>
<% end %>
<%= month_calendar events: @fixedcost_values do |date, fixedcost_value| %>
  <%= date.day %>
  <% fixedcost_value.each do |item| %>
    <%=link_to item.value, {controller: "records", action: "fixedcost_day", start_time: item.start_time} %>
  <% end %>
<% end %>