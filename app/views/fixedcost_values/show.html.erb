<div class="fixedcost_values-show">
  
  <div class="">
    <div class="">
      <%= link_to '固定費データ登録', new_fixedcost_value_path %>
    </div>
  </div>
  <div class="fixedcost_values-show__box">
    <div class="fixedcost_values-show__head">日付</div>
    <div class="fixedcost_values-show__">
      <%= @fixedcost_value.start_time.strftime('%Y/%m/%d')%>
    </div>
  </div>
  <div class="fixedcost_values-show__box">
    <div class="fixedcost_values-show__head">項目</div>
    <div class="fixedcost_values-show__">
      <%= @fixedcost_value.fixedcost.name %>
    </div>
  </div>
  <div class="fixedcost_values-show__box">
    <div class="fixedcost_values-show__head">内容</div>
    <div class="fixedcost_values-show__">
      <%= @fixedcost_value.content %>
    </div>
  </div>
  <div class="fixedcost_values-show__box">
    <div class="fixedcost_values-show__head">金額</div>
    <div class="fixedcost_values-show__">
      <%= @fixedcost_value.value.to_s(:delimited) %>円
    </div>
  </div>
  <div class="fixedcost_values-show__box">
    <div class="fixedcost_values-show__head">備考</div>
    <div class="fixedcost_values-show__">
      <%= @fixedcost_value.description %>
    </div>
  </div>
  <div class="">
    <div class="">
      <%= link_to '編集する', edit_fixedcost_value_path(@fixedcost_value) %>
    </div>
  </div>
  <div class="">
    <div class="">
      <%= link_to '削除する', fixedcost_value_path(@fixedcost_value), method: :delete, data: { confirm: '本当に消しますか？' }%>
    </div>
  </div>
  
</div>